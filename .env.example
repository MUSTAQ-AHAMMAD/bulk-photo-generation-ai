# ----- Database -----
DATABASE_URL=postgresql://postgres:password@localhost:5432/photogen

# ----- Redis -----
REDIS_HOST=localhost
REDIS_PORT=6379

# ----- JWT Auth -----
JWT_SECRET=change-me-in-production-super-secret-key-at-least-32-chars
JWT_EXPIRY=15m
JWT_REFRESH_SECRET=change-me-refresh-secret-at-least-32-chars
JWT_REFRESH_EXPIRY=7d

# ----- Cloudinary -----
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ----- AI Engines -----
OPENAI_API_KEY=sk-...
STABILITY_API_KEY=sk-...
REPLICATE_API_KEY=r8_...

# ----- Stripe -----
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PUBLISHABLE_KEY=pk_test_...

# ----- InsightFace Microservice -----
INSIGHTFACE_URL=http://localhost:5001

# ----- Thresholds (also configurable via Admin panel) -----
FACE_SIMILARITY_THRESHOLD=0.65
PRODUCT_SSIM_THRESHOLD=0.92

# ----- App -----
PORT=3001
FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3001/api

# ----- Rate Limiting -----
RATE_LIMIT=100

# ----- Generation -----
GENERATION_MAX_RETRIES=3
